{
  "name": "tbf07-draft",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:spring-raining/tbf07-draft.git",
  "author": "spring-raining <harusamex.com@gmail.com>",
  "private": true,
  "engines": {
    "node": ">= 10"
  },
  "keywords": [
    "book",
    "Vivliostyle",
    "viola-savepdf"
  ],
  "scripts": {
    "start": "run-p watch preview",
    "lint": "textlint ./content/**",
    "build:clean": "rimraf ./dist",
    "build:copy-content": "cpx \"content/**/!(*.{md,pug})\" dist/",
    "build:css": "node-sass scss/app.scss dist/bundle.css -r --source-map true --output-style expanded",
    "build:md": "ts-node build/index.ts -i / -o dist/",
    "build:pug": "pug -o dist/ content/",
    "build:pdf": "savepdf --book -s JIS-B5 dist",
    "build": "run-s build:clean build:copy-content build:css build:md build:pug build:pdf",
    "watch:copy-content": "cpx \"content/**/!(*.{md,pug})\" dist/ -w",
    "watch:css": "node-sass scss/app.scss dist/bundle.css -w -r --source-map true --output-style expanded",
    "watch:md": "ts-node build/index.ts -i content/ -o dist/ -w",
    "watch:pug": "pug -w -o dist/ content/",
    "watch": "npm-run-all -s build:css -p watch:*",
    "preview": "savepdf --book --preview dist/"
  },
  "dependencies": {
    "@paperist/remark-crossref": "^2.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/refractor": "^2.8.0",
    "chokidar": "^3.0.2",
    "cpx": "^1.5.0",
    "dewriteful": "^0.1.0",
    "hastscript": "^5.1.0",
    "mdast-util-to-hast": "^6.0.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "refractor": "^2.10.0",
    "rehype-format": "^3.0.0",
    "rehype-raw": "^4.0.1",
    "rehype-stringify": "^6.0.0",
    "remark-frontmatter": "^1.3.2",
    "remark-parse": "^7.0.1",
    "remark-parse-yaml": "0.0.3",
    "remark-rehype": "^5.0.0",
    "remark-ruby": "^0.2.0",
    "textlint": "^11.3.1",
    "textlint-rule-ja-hiragana-hojodoushi": "^1.0.4",
    "textlint-rule-ja-no-abusage": "^2.0.1",
    "textlint-rule-ja-no-redundant-expression": "^3.0.1",
    "textlint-rule-ja-no-successive-word": "^1.1.0",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-max-ten": "^2.0.3",
    "textlint-rule-no-doubled-conjunction": "^1.0.2",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^1.1.0",
    "textlint-rule-no-doubled-joshi": "^3.5.2",
    "textlint-rule-no-dropping-the-ra": "^1.1.2",
    "textlint-rule-no-mix-dearu-desumasu": "^4.0.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-no-nfd": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.0.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3",
    "unified": "^8.3.2",
    "unist-builder": "^1.0.4",
    "unist-util-visit": "^2.0.0",
    "vivliostyle": "^2019.8.101",
    "vivliostyle-savepdf": "^1.3.1"
  }
}
